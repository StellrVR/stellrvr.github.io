---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: layout.njk
---
{% set title = "tagged: " + tag %}
{% set description = "all posts tagged with " + tag %}

<div class="content-card">
    <div style="margin-bottom: 2rem;">
        <h2 style="font-family: 'Space Mono', monospace; font-size: 1.5rem; color: var(--ctp-text); margin-bottom: 0.5rem;">
            posts tagged: <span style="color: var(--ctp-mauve);">{{ tag }}</span>
        </h2>
        <a href="/blog/tags/" style="font-family: 'Space Mono', monospace; font-size: 0.8rem; color: var(--ctp-subtext0); text-decoration: none;">
            ‚Üê view all tags
        </a>
    </div>

    {% set taggedPosts = collections.posts | filterByTag(tag) %}

    {% if taggedPosts.length > 0 %}
    <div class="post-list">
        {% for post in taggedPosts %}
        <article class="post-preview">
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <div class="post-meta">
                {{ post.date | readableDate }}
                {% if post.data.author %}
                <span style="margin: 0 0.5rem; color: var(--ctp-surface2);">//</span>
                {{ post.data.author }}
                {% endif %}
            </div>
            {% if post.data.excerpt %}
            <p class="post-excerpt">{{ post.data.excerpt }}</p>
            {% endif %}
            {% if post.data.tags %}
            <div class="post-tags">
                {% for postTag in post.data.tags %}
                <span class="tag {% if postTag == tag %}tag-accent{% endif %}">{{ postTag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </article>
        {% endfor %}
    </div>
    {% else %}
    <div style="text-align: center; padding: 3rem; color: var(--ctp-overlay1);">
        <p style="font-family: 'Space Mono', monospace; font-size: 0.9rem;">no posts with this tag yet!</p>
    </div>
    {% endif %}
</div>
